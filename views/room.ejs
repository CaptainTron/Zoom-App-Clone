<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zoom App</title>
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
    <script>
        const ROOM_ID = "<%= roomId %>";
        console.log("Room ID is ", ROOM_ID);
    </script>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
<!-- Font Awesome Script Goes here -->
<script src="https://kit.fontawesome.com/05783f0d11.js" crossorigin="anonymous"></script>
</head>
<body>

    
    <div class="Container">
        <div class="left_C">
            <div class="video_C">
                <div id="video-grid">
            
                </div>
            </div>
        <div class="Controls_C">
            <!-- Left Container -->
            <!-- <div class="LControl_Container"> -->
                <div class="displayBlock_1">
                    <div class="microphone" onclick="MuteUnmute()">
                        <i class="fa-solid fa-microphone"></i>
                        <div>Mute</div>
                    </div>
                    <div class="video" onclick="playstop()">
                        <i class="fa-solid fa-video"></i>
                        <div>Stop Video</div>
                    </div>
                </div>
                <div class="displayBlock_2">
                    <div class="Shield DisplayColor">
                        <i class="fa-solid fa-shield-halved"></i>
                        <div>Privacy</div>
                    </div>
                    <div class="About">
                        <i class="fa-regular fa-address-card"></i>
                        <div>About</div>
                    </div>
                    <div class="chat">
                        <i class="fa-solid fa-comment"></i>
                        <div>Chat</div>
                    </div>
                </div>
                <div class="displayBlock_3">
                    <div class="Leave">
                        <i class="fa-solid fa-person-walking-arrow-right"></i>
                        <span class="LeaveTxt">Leave</span>
                    </div>
                </div>
            <!-- </div> -->
        </div>    
        </div>
        <!-- Chat Section Starts From here bro !!! -->
        <div class="Right_C">
            <h4>Chat Here</h4>
            <hr></hr>

            <!-- chat Messages will appear here -->
            <div class="MessageSection">
                <ul class="msg">
                </ul>
            </div>
            <div class="InputMsg">
                <input type="test" id="EnterMsg" placeholder="Enter Your Message " max="5">
            </div>
        </div>
    </div>

    <!-- Privacy PopUp will show here -->
<div class="showpopup Display">
    <div class="Message">
    </div>
</div>

<!-- About popUp will show Here -->










    <script src="script.js"></script>

</body>
</html>

